<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alex.projet" >

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!--Ajoutées pour utilisation maps-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <!--Ajoutées pour utilisation maps-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Projet"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Accueil" >
            <intent-filter android:label="Accueil" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Zone"
            android:label="Zone" />

        <intent-filter android:label="Zone" >
            <action android:name="android.intent.action.ZONE" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <activity
            android:name=".chat"
            android:label="Zone: nom de la zone" />

        <intent-filter android:label="Chat" >
            <action android:name="android.intent.action.CHAT" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <activity android:name=".hors_zone" />
        <activity android:name=".Settings" />
        <activity android:name=".Liste_usagers" />
        <activity android:name=".Carte"/>

        <!--Doit demeurer a la fin du fichier XML (avant </application>)-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyADUv_ogUZWpBjS0E2r6nJirOG_2bTyRZA"/>
        <!--Doit demeurer a la fin du fichier XML (avant </application>)-->
    </application>

</manifest>
