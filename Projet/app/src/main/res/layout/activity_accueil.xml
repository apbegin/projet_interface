<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.projet.Accueil">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:text=""
        android:hint="@string/hint_pseudo"
        android:ems="10"
        android:id="@+id/pseudonyme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_ok"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recevoir une notification avant de quitter la zone actuelle"
        android:id="@+id/checkBox"
        android:checked="true"
        android:textSize="14dp"
        android:layout_below="@+id/pseudonyme"
        android:layout_alignLeft="@+id/pseudonyme"
        android:layout_alignStart="@+id/pseudonyme" />
</RelativeLayout>
